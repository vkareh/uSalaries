<p class="lead">Search for <%= university %> employees</p>
<div class="input-append">
  <input type="search" id="search" placeholder="Search..." />
  <span class="add-on"><i class="icon-search"></i></span>
</div>

<form class="form-horizontal pull-right">
  <p class="pull-right muted">... or use the drop-downs to narrow down your options</p>

  <div class="control-group">
    <label class="control-label" for="campus">Campus</label>
    <div class="controls">
      <select id="campus"></select>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="department">Department</label>
    <div class="controls">
      <select id="department"></select>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="position">Position</label>
    <div class="controls">
      <select id="position"></select>
    </div>
  </div>

  <div id="graph" class="pull-right" style="width:480px;height:240px;"></div>
</form>

<br />
<div id="results"></div>
